generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  isAdmin       Boolean      @default(false)
  accounts      Account[]
  participant   Participant?
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  ext_expires_in    Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId], name: "provider_providerAccountId")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

model Meeting {
  id                 String    @id @default(cuid())
  title              String
  status             String    @default("created")
  audioUrl           String?
  transcript         String?
  summaryJson        Json?
  reportUrl          String?
  joinUrl            String?
  startDateTime      DateTime?
  organizerEmail     String?
  transcriptSource   String?
  hasGraphTranscript Boolean   @default(false)
  hasGraphRecording  Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  endDateTime        DateTime?
  graphId            String?   @unique
  onlineMeetingId    String?   @unique

  // âžœ nouveau champ
  fullTranscript String? // <---

  transcriptRaw Json?

  attendees MeetingParticipant[]
  segments  TranscriptSegment[]
}

model Participant {
  id             String               @id @default(cuid())
  displayName    String
  email          String?              @unique
  userId         String?              @unique
  voiceProfileId String?              @unique
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  meetings       MeetingParticipant[]
  user           User?                @relation(fields: [userId], references: [id])
  segments       TranscriptSegment[]
}

model MeetingParticipant {
  id             String      @id @default(cuid())
  meetingId      String
  participantId  String
  role           String?
  present        Boolean     @default(true)
  responseStatus String?
  meeting        Meeting     @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  participant    Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)

  @@unique([meetingId, participantId])
  @@index([meetingId])
}

model TranscriptSegment {
  id              String       @id @default(cuid())
  meetingId       String
  diarizedSpeaker String
  participantId   String?
  startMs         Int
  endMs           Int
  text            String
  meeting         Meeting      @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  participant     Participant? @relation(fields: [participantId], references: [id])

  @@index([meetingId])
  @@index([participantId])
}
