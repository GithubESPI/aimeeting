generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ✅ NEW: Statuts normalisés (au lieu de String)
 */
enum MeetingStatus {
  CREATED
  TRANSCRIPT_READY
  SUMMARY_READY
  PDF_READY
  SENT
  FAILED
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  isAdmin       Boolean      @default(false)

  accounts      Account[]
  participant   Participant?
  sessions      Session[]

  // ✅ NEW: relation vers les meetings "possédés" par cet utilisateur (dashboard)
  meetings      Meeting[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  ext_expires_in    Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId], name: "provider_providerAccountId")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

model Meeting {
  id                 String        @id @default(cuid())

  // ✅ NEW: owner (pour "mes réunions" / dashboard)
  userId             String?
  user               User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  title              String
  status             MeetingStatus @default(CREATED)

  audioUrl           String?
  transcript         String?

  // ➜ champ existant (ok)
  summaryJson        Json?

  // ✅ NEW: enrichir le stockage PDF (utile pour download / historique)
  reportUrl          String?
  reportFilename     String?
  lastPdfGeneratedAt DateTime?

  joinUrl            String?
  startDateTime      DateTime?
  endDateTime        DateTime?

  organizerEmail     String?
  transcriptSource   String?
  hasGraphTranscript Boolean       @default(false)
  hasGraphRecording  Boolean       @default(false)

  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  graphId            String?       @unique
  onlineMeetingId    String?       @unique

  // ➜ champ existant (ok)
  fullTranscript     String?

  transcriptRaw      Json?

  // ✅ NEW: pour l’envoi d’email PDF aux participants
  participantsEmails Json?         // ex: ["a@x.com","b@y.com"]
  lastEmailSentAt    DateTime?

  attendees          MeetingParticipant[]
  segments           TranscriptSegment[]

  // ✅ NEW: logs d’envoi (debug, historique)
  emailLogs          EmailLog[]

  @@index([userId])
  @@index([startDateTime])
}

model Participant {
  id             String               @id @default(cuid())

  // ✅ RECO: Graph peut renvoyer null -> on rend optionnel + fallback côté code
  displayName    String?

  email          String?              @unique
  userId         String?              @unique
  voiceProfileId String?              @unique
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  meetings       MeetingParticipant[]
  user           User?                @relation(fields: [userId], references: [id])
  segments       TranscriptSegment[]
}

model MeetingParticipant {
  id             String      @id @default(cuid())
  meetingId      String
  participantId  String
  role           String?
  present        Boolean     @default(true)
  responseStatus String?

  meeting        Meeting     @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  participant    Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)

  @@unique([meetingId, participantId])
  @@index([meetingId])
  @@index([participantId])
}

model TranscriptSegment {
  id              String       @id @default(cuid())
  meetingId       String
  diarizedSpeaker String
  participantId   String?
  startMs         Int
  endMs           Int
  text            String

  meeting         Meeting      @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  participant     Participant? @relation(fields: [participantId], references: [id])

  @@index([meetingId])
  @@index([participantId])
}

/**
 * ✅ NEW: Historique des envois email (Mail.Send)
 * Permet d'afficher dans le dashboard: envoyé/échoué, à qui, quand, etc.
 */
model EmailLog {
  id        String   @id @default(cuid())
  meetingId String
  meeting   Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  status    String   // "SENT" | "FAILED" (simple) ou tu peux faire un enum si tu veux
  to        Json     // ex: ["a@x.com","b@y.com"]
  subject   String
  error     String?
  createdAt DateTime @default(now())

  @@index([meetingId])
  @@index([createdAt])
}
